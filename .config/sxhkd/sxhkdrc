#
# wm independent hotkeys
#
# kitty terminal emulator
super + space
	kitty

# terminal emulator
super + Return
	kitty

# terminal emulator in same window as currently focused
super + shift + Return
	termite

# program launcher
super + s
	rofi -modi run,drun -show drun -columns 1 -width 24 -lines 8 -padding 45 -hide-scrollbar -show-icons -drun-icon-theme "Papirus"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Open sxhkdrc config file
super F1
	kitty -e vim

#
# bspwm hotkeys
#

# restart bspwm
super F2
	bspc wm -r

# quick bspwm
super + shift + x
    bspc quit

# close and kill
super + shift + q
	bspc node -c

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + space}
	bspc node -t {tiled,pseudo_tiled,floating}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
#	bspc node -{f,s} {west,south,north,east}
#super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local

super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9
super + 0
    bspc desktop -f 10

# Temporary very ugly fix (Weird bug when other more simple binding was used.)
super + shift + 1
    bspc node -d 1
super + shift + 2
    bspc node -d 2
super + shift + 3
    bspc node -d 3
super + shift + 4
    bspc node -d 4
super + shift + 5
    bspc node -d 5
super + shift + 6
    bspc node -d 6
super + shift + 7
    bspc node -d 7
super + shift + 8
    bspc node -d 8
super + shift + 9
    bspc node -d 9
super + shift + 0
    bspc node -d 10
# focus or send to the given desktop
#super + {_,shift + }{1-9,0}
#	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Move window into presel position
# alt + shift {h,j,k,l}
# 	bspc node -w {left.manual,down.manual,up.manual,right.manual}

# send the newest marked node to the newest preselected node
super + shift + y
	bspc node newest.marked.local -n newest.!automatic.local

# send the focused node to the newest preselected node
super + y
	bspc node focused -n newest.!automatic.local

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

