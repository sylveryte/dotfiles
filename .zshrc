# source /usr/share/nvm/init-nvm.sh

# android

export JAVA_HOME=$HOME/kento/android/android-studio/jbr
export ANDROID_SDK_ROOT_ROOT=$HOME/kento/android
export ANDROID_SDK_ROOT=$ANDROID_SDK_ROOT_ROOT/Android/Sdk
